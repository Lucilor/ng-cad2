{
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "json.schemas": [
        {
            "fileMatch": ["thuums.json", "thuums.jsonc"],
            "schema": {
                "type": "array",
                "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["name", "description"],
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "translation": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    ]
}
